<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="all" xmlns="http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name="logPath">/c4db/log4j2/</Property>
    </Properties>
    <Appenders>
        <!-- File Appender -->

        <RollingFile name="RollingFile" fileName="${logPath}${env:C4STATE_TOPIC_PREFIX}.log"
                     filePattern="${logPath}$${date:yyyy-MM}/${env:C4STATE_TOPIC_PREFIX}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="1GB"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${logPath}" maxDepth="2">
                    <ifLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <!-- Console Appender -->

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{%-5p} %c{2} - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level = "info">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>